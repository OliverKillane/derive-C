{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["regex"],
  "dependencyDashboard": true,
  "prConcurrentLimit": 3,
  "ignorePaths": [],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "groupName": "cmake deps"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["CMakeLists\\.txt$", "\\.cmake$"],
      "matchStrings": [
        "set\\(\\s*GOOGLE_TEST_VERSION\\s+(?<currentValue>[^)\\s]+)\\s*\\)"
      ],
      "depNameTemplate": "google/googletest",
      "datasourceTemplate": "git-tags",
      "packageNameTemplate": "https://github.com/google/googletest.git"
    },
    {
      "fileMatch": ["CMakeLists\\.txt$", "\\.cmake$"],
      "matchStrings": [
        "set\\(\\s*RAPID_CHECK_REF\\s+(?<currentValue>refs/heads/derive-c-fork)\\s*\\)\\s*\\r?\\n\\s*set\\(\\s*RAPID_CHECK_DIGEST\\s+(?<currentDigest>[0-9a-fA-F]{40})\\s*\\)"
      ],
      "depNameTemplate": "oliverkillane/rapidcheck",
      "datasourceTemplate": "git-refs",
      "packageNameTemplate": "https://github.com/oliverkillane/rapidcheck.git"
    }
  ]
}
